# Database - Replace with your production database URL
DATABASE_URL="postgresql://user:password@host:port/database"

# Redis - Replace with your production Redis URL
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-min-32-characters"
JWT_EXPIRES_IN="7d"

# Encryption Keys - Generate secure keys for production
ENCRYPTION_KEY="your-32-character-encryption-key-here"
AUDIT_LOG_KEY="your-32-character-audit-log-key-here"

# AI APIs (Optional)
OPENAI_API_KEY="your-openai-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"

# Email Service (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
FROM_EMAIL="support@yourdomain.com"

# Crisis Services
CRISIS_TEXT_LINE_API="your-crisis-text-line-api-key"

# AWS S3 for Backups (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-backup-bucket-name"
AWS_REGION="us-east-1"

# Socket.io
SOCKET_SECRET="your-socket-io-secure-secret"

# NextAuth.js
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-characters"

# Environment
NODE_ENV="production"

# Feature Flags
ENABLE_AI_THERAPY="true"
ENABLE_CRISIS_DETECTION="true"
ENABLE_PEER_SUPPORT="true"
ENABLE_PROFESSIONAL_SERVICES="false"
ENABLE_OFFLINE_MODE="true"

