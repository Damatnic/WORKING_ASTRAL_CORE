{
  "name": "astral-core-v5",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && cross-env NODE_ENV=production next build",
    "build:windows": "cross-env NODE_OPTIONS=--max-old-space-size=4096 node scripts/windows-build.js",
    "build:optimized": "npm run prebuild && cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=6144 next build",
    "build:fast": "npm run prebuild:fast && cross-env NODE_ENV=production next build",
    "prebuild": "npm run typecheck && npm run lint && npx prisma generate",
    "prebuild:fast": "npx prisma generate",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit --incremental",
    "build:analyze": "ANALYZE=true npm run build",
    "build:monitor": "node scripts/build-monitor.js \"npm run build\"",
    "build:perf": "node scripts/build-monitor.js --analyze",
    "vercel:build": "npx prisma generate && cross-env NODE_ENV=production npm run build",
    "build:safe": "npm install --prefer-offline --no-audit && npx prisma generate && cross-env NODE_ENV=production npm run build",
    "deploy:check": "node scripts/deployment-check.mjs",
    "deploy:verify": "node scripts/deployment-verification.js",
    "vercel:validate": "node scripts/validate-vercel.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:security": "npm audit && npm run test:owasp",
    "test:owasp": "node scripts/security-audit.js",
    "test:a11y": "node scripts/accessibility-audit.js",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "setup": "node scripts/auto-setup.js",
    "check": "node scripts/check-setup.js",
    "auth:setup": "node scripts/generate-keys.js",
    "db:setup": "npm run prisma:generate && npm run prisma:push && node scripts/setup-database.js",
    "db:reset": "prisma migrate reset --force && node scripts/setup-database.js",
    "db:seed": "node scripts/setup-database.js",
    "docker:build": "docker build -t astralcore:latest .",
    "docker:run": "docker run -p 3000:3000 astralcore:latest",
    "deploy:staging": "cross-env NODE_ENV=production npm run build && npm run deploy:staging-push",
    "deploy:production": "npm run test:ci && cross-env NODE_ENV=production npm run build && npm run deploy:prod-push",
    "deploy:staging-push": "node scripts/deploy-staging.js",
    "deploy:prod-push": "node scripts/deploy-production.js",
    "backup:create": "node scripts/backup.js create",
    "backup:restore": "node scripts/backup.js restore",
    "monitor:start": "node scripts/monitoring.js",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "analyze:performance": "cross-env NODE_ENV=production npm run build && npm run analyze:bundle",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "node scripts/validate.js",
    "validate:quick": "node scripts/validate.js --skip-tests",
    "pre-commit": "node scripts/pre-commit-hooks.js",
    "pre-commit:install": "node scripts/pre-commit-hooks.js --install",
    "ci:validate": "npm run typecheck && npm run lint && npm run test:ci",
    "ci:build": "npm run build && npm run test:e2e",
    "dev:safe": "npm run typecheck && npm run dev",
    "build:check": "npm run typecheck && npm run lint && npm run build"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@neondatabase/serverless": "^1.0.1",
