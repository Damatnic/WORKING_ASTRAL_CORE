    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "fuse.js": "^7.1.0",
    "ioredis": "^5.7.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.1",
    "lucide-react": "^0.542.0",
    "next": "14.2.32",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.10.1",
    "otplib": "^12.0.1",
    "path-browserify": "^1.0.1",
    "pdfkit": "^0.15.2",
    "postcss": "^8.5.6",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.11",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.17",
